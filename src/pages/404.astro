---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h1 class="text-4xl font-bold text-[color:var(--color-luxe-text)] mb-4">404 - Page Not Found</h1>
    <p class="text-[color:var(--color-luxe-subtext)] mb-8">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a 
      href="/" 
      class="inline-block px-6 py-3 bg-[color:var(--color-luxe-accent)] text-white rounded-lg hover:opacity-90 transition-colors"
    >
      Return Home
    </a>
  </div>
</Layout>