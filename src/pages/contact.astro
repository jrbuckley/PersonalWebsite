            <input
              type="email"
              id="email"
              name="email"
              class="mt-1 block w-full rounded-md bg-[color:var(--color-luxe-background)] border-[color:var(--color-luxe-subtext)]/20 text-[color:var(--color-luxe-text)] focus:border-[color:var(--color-luxe-link)] focus:ring-1 focus:ring-[color:var(--color-luxe-link)] outline-none px-4 py-2"
              required
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-[color:var(--color-luxe-text)]">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="mt-1 block w-full rounded-md bg-[color:var(--color-luxe-background)] border-[color:var(--color-luxe-subtext)]/20 text-[color:var(--color-luxe-text)] focus:border-[color:var(--color-luxe-link)] focus:ring-1 focus:ring-[color:var(--color-luxe-link)] outline-none px-4 py-2"
              required
            ></textarea>
          </div>
          <div id="formMessage" class="hidden text-sm"></div>
          <button
            type="submit"
            class="w-full bg-[color:var(--color-luxe-accent)] text-[color:var(--color-luxe-text)] px-6 py-3 rounded-lg hover:opacity-90 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</Layout>

<!-- Add reCAPTCHA script -->
<script src="https://www.google.com/recaptcha/api.js?render=YOUR_RECAPTCHA_SITE_KEY"></script>

<script>
  // Declare grecaptcha type
  declare const grecaptcha: {
    execute: (siteKey: string, options: { action: string }) => Promise<string>;
  };

  const form = document.getElementById('contactForm') as HTMLFormElement;
  const formMessage = document.getElementById('formMessage') as HTMLDivElement;
  const RATE_LIMIT_KEY = 'contact_form_submission';
  const RATE_LIMIT_DURATION = 3600000; // 1 hour in milliseconds

  // Check rate limit
  function checkRateLimit() {
    const lastSubmission = localStorage.getItem(RATE_LIMIT_KEY);
    if (lastSubmission) {
      const timeSinceLastSubmission = Date.now() - parseInt(lastSubmission);
      if (timeSinceLastSubmission < RATE_LIMIT_DURATION) {
        const remainingTime = Math.ceil((RATE_LIMIT_DURATION - timeSinceLastSubmission) / 1000 / 60);
        throw new Error(`Please wait ${remainingTime} minutes before submitting again.`);
      }
    }
    return true;
  }

  // Update rate limit
  function updateRateLimit() {
    localStorage.setItem(RATE_LIMIT_KEY, Date.now().toString());
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    try {
      // Check rate limit
      checkRateLimit();

      // Show loading state
      formMessage.textContent = 'Sending message...';
      formMessage.className = 'text-sm text-[color:var(--color-luxe-text)]';
      formMessage.classList.remove('hidden');

      // Get reCAPTCHA token
      const recaptchaToken = await grecaptcha.execute('YOUR_RECAPTCHA_SITE_KEY', { action: 'submit' });

      // Get form data
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        message: formData.get('message'),
        recaptchaToken
      };

      // Send data to API
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || 'Failed to send message');
      }

      // Update rate limit
      updateRateLimit();

      // Show success message
      formMessage.textContent = 'Message sent successfully!';
      formMessage.className = 'text-sm text-[color:var(--color-luxe-accent)]';
      form.reset();
    } catch (error: unknown) {
      // Show error message
      const errorMessage = error instanceof Error ? error.message : 'Failed to send message. Please try again.';
      formMessage.textContent = errorMessage;
      formMessage.className = 'text-sm text-red-500';
    }
  });
</script> 