---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Personal Website",
    description: "A content-driven personal website built with the help of Cursor AI",
    technologies: ["Astro", "TypeScript", "Tailwind CSS", "Cursor AI"],
    link: "#",
    github: "https://github.com/jrbuckley/PersonalWebsite"
  },
  {
    title: "Sanita",
    description: "An open-source social media platform centered around health and fitness",
    technologies: ["ATProtocol", "Next.js", "TypeScript", "React Native", "Zustand"],
    link: "#",
    github: "https://github.com/jrbuckley/sanita"
  },
  {
    title: "Diamond",
    description: "A mobile app for viewing college baseball scores and stats",
    technologies: ["React Native", "TypeScript", "Tailwind CSS", "Expo", "Firebase"],
    link: "#",
    github: "https://github.com/jrbuckley/Diamond"
  },
  {
    title: "JANE",
    description: "Just Another Natural-language Entity: A voice-based AI assistant",
    technologies: ["TBD"],
    link: "#",
    github: "https://github.com/jrbuckley/JANE"
  },
  {
    title: "The Picks",
    description: "An iOS app that allows you and your friends to select NFL spreads and track your picks",
    technologies: ["Swift", "SwiftUI", "Firebase"],
    link: "#",
    github: "https://github.com/jrbuckley/ThePicks"
  }
];
---

<Layout title="Projects - Jorge Buckley">
  <div class="max-w-6xl mx-auto space-y-12">
    <h1 class="text-4xl font-bold text-[color:var(--color-luxe-text)] text-center mb-12">My Projects</h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-[color:var(--color-luxe-card)] rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <h2 class="text-2xl font-semibold text-[color:var(--color-luxe-text)] mb-2">
              {project.title}
            </h2>
            <p class="text-[color:var(--color-luxe-subtext)] mb-4">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="px-3 py-1 bg-[color:var(--color-luxe-background)] text-[color:var(--color-luxe-text)] rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex space-x-4">
              {/* <a 
                href={project.link} 
                class="text-[color:var(--color-luxe-link)] hover:text-[color:var(--color-luxe-accent)]"
                target="_blank"
                rel="noopener noreferrer"
              >
                Live Demo →
              </a> */}
              <a 
                href={project.github} 
                class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)]"
                target="_blank"
                rel="noopener noreferrer"
              >
                GitHub →
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout> 