---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Project 1",
    description: "A full-stack web application built with React and Node.js",
    technologies: ["React", "Node.js", "MongoDB", "Express"],
    link: "#",
    github: "#"
  },
  {
    title: "Project 2",
    description: "A responsive e-commerce platform with real-time inventory management",
    technologies: ["Vue.js", "Python", "PostgreSQL", "Django"],
    link: "#",
    github: "#"
  },
  {
    title: "Project 3",
    description: "A machine learning-powered analytics dashboard",
    technologies: ["Python", "TensorFlow", "React", "AWS"],
    link: "#",
    github: "#"
  }
];
---

<Layout title="Projects - Jorge Buckley">
  <div class="max-w-6xl mx-auto space-y-12">
    <h1 class="text-4xl font-bold text-[color:var(--color-luxe-text)] text-center mb-12">My Projects</h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-[color:var(--color-luxe-card)] rounded-lg shadow-md overflow-hidden">
          <div class="p-6">
            <h2 class="text-2xl font-semibold text-[color:var(--color-luxe-text)] mb-2">
              {project.title}
            </h2>
            <p class="text-[color:var(--color-luxe-subtext)] mb-4">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="px-3 py-1 bg-[color:var(--color-luxe-background)] text-[color:var(--color-luxe-text)] rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex space-x-4">
              <a 
                href={project.link} 
                class="text-[color:var(--color-luxe-link)] hover:text-[color:var(--color-luxe-accent)]"
                target="_blank"
                rel="noopener noreferrer"
              >
                Live Demo →
              </a>
              <a 
                href={project.github} 
                class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)]"
                target="_blank"
                rel="noopener noreferrer"
              >
                GitHub →
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout> 