---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Personal website of Jorge Buckley - Software Engineer" />
	</head>
	<body class="min-h-screen bg-[color:var(--color-luxe-background)] text-[color:var(--color-luxe-text)]">
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-[color:var(--color-luxe-accent)] text-[color:var(--color-luxe-text)] px-4 py-2 rounded-lg">
			Skip to main content
		</a>

		<nav class="bg-[color:var(--color-luxe-card)] p-4" role="navigation" aria-label="Main navigation">
			<div class="max-w-4xl mx-auto flex justify-between items-center">
				<a href="/" class="text-xl font-bold text-[color:var(--color-luxe-accent)]" aria-label="Home">JB</a>
				<div class="flex space-x-6" role="menubar">
					<a href="/" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" role="menuitem" aria-label="Home">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
						</svg>
					</a>
					<a href="/about" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" role="menuitem" aria-label="About">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
						</svg>
					</a>
					<a href="/projects" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" role="menuitem" aria-label="Projects">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
						</svg>
					</a>
					<a href="/contact" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" role="menuitem" aria-label="Contact">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</a>
				</div>
			</div>
		</nav>

		<main id="main-content" class="p-4" role="main">
			<slot />
		</main>

		<footer class="bg-[color:var(--color-luxe-card)] p-4 mt-8" role="contentinfo">
			<div class="max-w-4xl mx-auto flex justify-center space-x-6">
				<a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" aria-label="GitHub Profile">
					<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
				</a>
				<a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener noreferrer" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" aria-label="LinkedIn Profile">
					<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
						<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-.88-.018-2.013-1.225-2.013-1.225 0-1.412 1.057-1.412 2.047v5.57h-3v-11h3v1.517c.437-.623 1.33-1.523 2.33-1.523 2.31 0 3.184 1.523 3.184 3.506v6.5z"/>
					</svg>
				</a>
				<a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors" aria-label="Download Resume">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
					</svg>
				</a>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
