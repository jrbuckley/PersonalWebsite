---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-[color:var(--color-luxe-background)] text-[color:var(--color-luxe-text)]">
		<nav class="bg-[color:var(--color-luxe-card)] shadow-lg">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16">
					<div class="flex items-center">
						<a href="/" class="text-xl font-bold text-[color:var(--color-luxe-accent)]">Jorge Buckley</a>
					</div>
					<div class="flex items-center space-x-4">
						<a href="/" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">Home</a>
						<a href="/about" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">About</a>
						<a href="/projects" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">Projects</a>
						<a href="/contact" class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">Contact</a>
					</div>
				</div>
			</div>
		</nav>

		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

		<footer class="bg-[color:var(--color-luxe-card)] shadow-lg mt-auto">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex justify-center space-x-6">
					<a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" 
						class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">
						GitHub
					</a>
					<a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener noreferrer"
						class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">
						LinkedIn
					</a>
					<a href="/resume.pdf" 
						class="text-[color:var(--color-luxe-subtext)] hover:text-[color:var(--color-luxe-text)] transition-colors">
						Resume
					</a>
				</div>
				<div class="mt-4 text-center text-[color:var(--color-luxe-subtext)]">
					Â© {new Date().getFullYear()} Jorge Buckley. All rights reserved.
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
